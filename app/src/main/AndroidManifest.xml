<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vortex_App"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".NotificationsActivity"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name=".EventsActivity"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name=".NotificationDetailActivity"
            android:exported="false"
            android:launchMode="singleTop"/>
        <!-- Other activities -->
        <activity android:name=".EventActivity" />
        <activity android:name=".EventInfoActivity" />
        <activity android:name=".OrganizerInfo"/>
        <activity android:name=".WaitingListActivity" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:launchMode="singleTop"/>
        <activity
            android:name=".EntrantActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".OrganizerMenu"/>
        <activity android:name=".AddEvent"/>
        <activity android:name=".OrganizerActivity"
            android:exported="false"/>
        <activity android:name=".OrgQRCodeActivity"
            android:exported="false"/>
        <activity android:name=".CancelledEntrantsActivity" />
        <activity android:name=".SelectedEntrantsActivity" />
        <activity android:name=".FinalEntrantsActivity" />
        <activity android:name=".OrgWaitingListActivity" />
        <activity android:name=".LocationActivity" />
        <activity android:name=".EditProfileActivity" android:exported="false" />

        <!-- Service -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Receivers -->


        <receiver android:name=".StatusCheckReceiver"
            android:enabled="true"
            android:exported="false">
        </receiver>

    </application>

</manifest>
