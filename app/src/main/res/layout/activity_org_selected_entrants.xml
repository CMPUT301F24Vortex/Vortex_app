<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Go Back" />

        <!-- Final Entrants Section -->
        <TextView
            android:id="@+id/textViewFinalEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Entrants"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFinalEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Selected But Not Confirmed Section -->
        <TextView
            android:id="@+id/textViewSelectedButNotConfirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected But Not Confirmed"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSelectedButNotConfirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Canceled Entrants Section -->
        <TextView
            android:id="@+id/textViewCanceledEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Canceled Entrants"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCanceledEntrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:clipToPadding="false" />

    </LinearLayout>
</ScrollView>
