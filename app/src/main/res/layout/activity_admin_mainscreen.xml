<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_mainscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.admin.AdminMainscreen">

    <!-- Button for Profile -->
    <Button
        android:id="@+id/button_profile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:backgroundTint="#F8F8F8"
        android:text="Profiles"
        android:textColor="#3A3A3A"
        android:textSize="20sp"
        android:padding="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Button for Events & Facilities -->
    <Button
        android:id="@+id/button_facility_event"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F8F8F8"
        android:text="Events &amp; Facilities"
        android:textColor="#3A3A3A"
        android:textSize="20sp"
        android:padding="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_profile" />

    <!-- Button for Notifications (Fixed accessibility issue) -->
    <Button
        android:id="@+id/button_notification"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#F8F8F8"
        android:drawablePadding="12dp"
        android:text="Notifications"
        android:textColor="#3A3A3A"
        android:textSize="20sp"
        android:padding="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_facility_event" />

    <!-- Button for Logout -->
    <Button
        android:id="@+id/button_logout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/red"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="16dp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_notification"/>

</androidx.constraintlayout.widget.ConstraintLayout>
