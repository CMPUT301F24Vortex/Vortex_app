<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- input title -->
    <EditText
        android:id="@+id/edit_text_notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter notification title"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- content -->
    <EditText
        android:id="@+id/edit_text_notification_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter notification content"
        android:inputType="textMultiLine"
        android:lines="4"
        android:gravity="top"
        android:layout_marginBottom="16dp" />

    <!-- select notification type -->
    <Spinner
        android:id="@+id/spinner_notification_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- back button -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginBottom="8dp" />

    <!-- send button -->
    <Button
        android:id="@+id/button_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Notification" />
</LinearLayout>