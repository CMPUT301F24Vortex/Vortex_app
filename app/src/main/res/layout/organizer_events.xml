<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:backgroundTint="@color/lightGray">

    <!-- Button to Change Role -->
    <Button
        android:id="@+id/button_change_role"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:minWidth="88dp"
        android:minHeight="48dp"
        android:backgroundTint="#4CAF50"
        android:text="Change Role"
        android:textColor="@android:color/white" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_organizer_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Organizer Events"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- ListView for Events -->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/white"
        android:dividerHeight="16dp"
        android:padding="8dp" />

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/button_add_event"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/red"
            android:text="Create"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_my_facility"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="#958B8B"
            android:text="My Facility"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
